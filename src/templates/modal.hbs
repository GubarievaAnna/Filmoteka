<img
{{#if this.poster_path}} 
src='https://image.tmdb.org/t/p/w500/{{this.poster_path}}'
{{else}} 
src='https://png.pngtree.com/png-clipart/20211121/original/pngtree-not-found-stamp-label-png-image_6948403.png'
{{/if}}
  alt='Poster of movie "{{this.original_title}}" width ="200'
  height='200'
/>
<p>Vote {{vote_average}} / {{vote_count}}</p>
<p>Popularity {{this.popularity}}</p>
<p>Original title {{this.original.title}}</p>
<p>Genre {{#each this.genres}}{{this.name}}{{/each}}</p>
<p>About {{this.overview}}</p>
<article class="film-id is-hidden ">{{this.id}}</article>
<button type='button' data-watched>Add to watched</button>
<button type='button' data queue>Add to queue</button>